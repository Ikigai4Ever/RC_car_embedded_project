#ifndef INC_FUNCTIONS_H_
#define INC_FUNCTIONS_H_

#include "main.h"
#include <stdio.h>
#include <stdint.h>

// --- STRUCTS --- //
typedef struct {
    uint32_t x;
    uint32_t y;
} JoyXY;


// --- VARIABLES --- //
#define BT_TX_BUFFER_SIZE 64
#define BT_RX_BUFFER_SIZE 128

extern uint8_t btTxBuffer[BT_TX_BUFFER_SIZE];
extern uint8_t btRxBuffer[BT_RX_BUFFER_SIZE];

static volatile uint16_t rxReadIndex = 0;
static UART_HandleTypeDef *btHuart = NULL;


// --- FUNCTION PROTOTYPES --- //

// BLUETOOTH SEND //
void BT_SendFormatted(UART_HandleTypeDef *huart,
                                   uint32_t v1,
                                   uint32_t v2,
                                   uint32_t v3);

HAL_StatusTypeDef BT_SendString(UART_HandleTypeDef *huart,
                                const char *str);

// BLUETOOTH RECEIEVE //
void BT_StartReceiveDMA(UART_HandleTypeDef *huart);
int BT_ReadLine(char *dest, int maxLen);   // helper
int BT_Available(void);
uint8_t BT_ReadByte(void);


// OTHER //
JoyXY Get_Direction(ADC_HandleTypeDef* ADCx);
void Create_Custom_Characters(void);



#endif /* INC_FUNCTIONS_H_ */
